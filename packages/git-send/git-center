#!/bin/python3
from tkinter import Tk as App
from tkinter import *
import os
from pathlib import Path
CommitMessage=False

def GitCommitAndPushButton():
	os.system(f'cd {Path} ; git add * ; git commit -a -m "committed with git-center from viktor-chiarcos" ; git pull ; git push ')
	print(f"==========GitCommitAndPushButton() is fineshed. Git Center ready for the next comannd==========")
def GitCommitWithYourOwnMessageButton():
	Message=input("Warning: This Script don't allow this symbols: ''\nEnter your Commit Message: ")
	os.system(f'cd {Path} ; git add * ; git commit -a -m "{Message}"')
	print(f"==========GitCommitWIthYourOwnMessageButton() is fineshed. Git Center ready for the next comannd==========")
	CommitMessage=True
def GitPullButton():
	os.system(f"cd {Path} ; git pull")
	print(f"==========GitPullButton() is fineshed. Git Center ready for the next command==========")
def ChangePathButton():
	Path = input("Repository Path (start with / or ~): ")
	App.title(f"{Path} - Git Center")
	CommitMessage=False
	print(f"==========ChangePathButton() is fineshed. Git Center ready for the next command==========")
def CloseButton():
	quit()
def GitPushButton():
	if CommitMessage==True:
		os.system("git push")
	else:
		print("Your don't committed your changes!")
	print(f"==========GitPushButton() is fineshed. Git Center ready for the next command==========")


git_path_local = Path.cwd()

App = App()
App.title("python3.11 - Git Center")
Path = git_path_local
App.title(f"{Path} - Git Center")
TextLabel2 = Label(App, text=f"	Your Path: {Path}	")
TextLabel2.pack()
GitCommit = Button(App, text="Commit and Push" , command=GitCommitAndPushButton)
GitCommit.pack()
GitCreateMessage=Button(App, text="Commit with your own Message", command=GitCommitWithYourOwnMessageButton)
GitCreateMessage.pack()
GitPull = Button(App, text="Pull" , command=GitPullButton)
GitPull.pack()
GitPush=Button(App, text="Push", command=GitPushButton)
GitPush.pack()
ChangePath = Button(App, text="Change Path", command=ChangePathButton)
ChangePath.pack()
Close = Button(App, text="Quit Git Center", command=CloseButton)
Close.pack()
TextLabel = Label(App, text="	     Please Start this app with a terminal		")
TextLabel.pack()
App.mainloop()
